<div class="card bg-light showKitten">
  <div class="row">

    <div class="col-lg-6">
      <%#raise @kitten.inspect %>
      <% if @kitten.image.present? %>
        <%= image_tag @kitten.image_url(:full).to_s, class: 'rounded m-2' %>
      <% end %>
    </div>

    <div class="col-lg-6">
      <div class="card-body">
        <h2 class="card-title text-center <%= @kitten.sex ? "boy" : "girl" %>">
            <%= @kitten.name %>
        </h2>

        <ul class="list-group list-group-flush mr-4 ml-4">
          <li class="list-group-item"><%= @kitten.color %></li>
          <li class="list-group-item"><%= @kitten.sex ? "boy" : "girl" %></li>
          <li class="list-group-item">D.O.B: <%= @kitten.dob %></li>
          <li class="list-group-item"><%= age(@kitten.dob) %></li>
          <h6>
            <li class="list-group-item text-muted">Fostered By:
            <span class="font-weight-normal d-inline-block mb-0.5 ml-1"><%= @kitten.user.username %></span>
            </li>
          </h6>
        </ul>

        <div class="text-center m-4">
          <h4 class="litter-name"><%= link_to "#{@kitten.litter.name}", litter_path(@litter.id) %></h4>

        </div>
      </div>
    </div>
  </div>


  <div class="row adjust-width">
    <div class="col-xs-12 col-md-6 btn-margin">
      <button class="btn btn-outline-primary btn-block prev-kitten"> << Previous Kitten </button>
    </div>

    <div class="col-xs-12 col-md-6 btn-margin">
     <button class="btn btn-outline-primary btn-block next-kitten"> Next Kitten >> </button>
    </div>
  </div>

  <div class="row adjust-width">
    <%= link_to "Back to #{@kitten.litter.name} Litter", litter_path(@litter), class: "btn btn-outline-primary btn-block" %>
  </div>


    <%# link_to "Edit", edit_litter_path, class: "btn btn-outline-primary" %>
    <%# link_to "Delete", litter_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-primary" %>

</div>
