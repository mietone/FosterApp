<div class='nested-fields'>
  <div class="row">
    <div class="form-group col">
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.input :name,  class: 'form-control' %>
      <%= f.input :color, class: 'form-control' %>
      <%= f.input :sex, as: :radio_buttons, collection: [['Girl', 0] ,['Boy', 1]], checked: (f.object.sex ? 1 : 0), wrapper: :vertical_collection_inline %>
    </div>
    <div class="form-group col">
      <% if f.object.image.present? %>
      <%= image_tag f.object.image_url(:thumb).to_s %>
      <%= f.check_box :remove_image %>
      <%= f.label :destroy, "Remove Image" %>
      <% else %>
      <p>Upload A Photo</p>
      <%= f.file_field :image, label: "Upload A Photo" %>
      <%= f.hidden_field :image_cache %>
      <% end %>
    </div>
  </div>

    <%= link_to_remove_association "X Remove This Kitten Info", f %>
    <hr>
</div>
